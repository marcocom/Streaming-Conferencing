package com.ws{	import flash.display.Sprite;	import flash.events.Event;	import tv.ustream.gui2.Button;	import tv.ustream.viewer.logic.modules.layers.Layer;	/**	 * In this Cohost example this class will be instantiated as a container 	 * of a new cohost layer. For every cohosting viewers you will have 	 * one instance of this.	 */	public class LayerEditor extends Sprite	{		/**		 * If you define a button as the "drag" property, the layermanager will use it as		 * the draggable area		 */		public var drag:Button		public var remove:Button				public function LayerEditor():void		{			//Instantinate the buttons			addChild(drag = new Button('drag here'))			drag.backgroundColor = 0x00ff00			drag.color = 0						addChild(remove = new Button('remove'))			remove.backgroundColor = 0xff0000			remove.color = 0			remove.y = drag.height			remove.addEventListener('click',onRemove)		}		private function onRemove(...e):void 		{			//If Remove is clicked we dispatch a removeLayer event to the containers.			//Pleas note bubbles=true so it can be caught at a higher hierarchy level			dispatchEvent(new Event('removeLayer', true, true))		}		//Implement this setter		public function set layer( value:Layer ):void		{			addChildAt( value, 0 )		}	}}